#!/bin/sh
# Pre-commit hook: patch package.json exports and reference.md
# for custom helper functions in src/helpers/

# Run the patchers
node scripts/patch-custom-exports.js
node scripts/patch-custom-reference.js

# Re-stage patched files if they changed
git diff --quiet package.json || git add package.json
git diff --quiet reference.md || git add reference.md
